<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
        integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .navbar {
            width: 100%;
            height: 50px;
            background-color: #f1f1f1;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar a {
            float: left;
            padding: 12px;
            color: black;
            text-decoration: none;
            font-size: 15px;
        }
        .navbar a i {
            font-size: 16px;
            min-width: 20px;
            text-align: center;
        }
        .navbar a:hover:not(.active) {
            background-color: #ddd;
            color: black;
            border-radius: 6px;
        }

        .sidebar {
            position: fixed;
            height: 100%;
            width: 200px;
            background-color: #f1f1f1; 
            margin: 0;
            padding: 0;
            overflow: auto;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            gap: 10px; /* space between icon and text */
            color: black;
            padding: 10px 16px;
            text-decoration: none;
            font-size: 15px;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

        .sidebar a i {
            font-size: 16px;
            min-width: 20px;
            text-align: center;
        }

        .sidebar a.active {
            background-color: #04aa6d;
            color: white;
            border-radius: 6px;
            margin: 4px;
        }

        .sidebar a:hover:not(.active) {
            background-color: #ddd;
            color: black;
            border-radius: 6px;
        }
        .sidebar-container {
            display: flex;
        }

        .sidebar-toggle {
            background: none;
            border: none;
            color: #333;
            padding: 10px;
            cursor: pointer;
            font-size: 20px;
            position: fixed;
            top: 50px;
            left: 175px;
            z-index: 1000;
        }

        .sidebar.collapsed {
            width: 60px;
        }

        .sidebar.collapsed a {
            justify-content: center;
        }

        .sidebar.collapsed .link-text {
            display: none;
        }

        .sidebar.collapsed + .sidebar-toggle {
            left: 70px;
        }
        .logo-container {
            display: flex;
            justify-content: left;
            align-items: center;
            height: 50px;
            padding: 20px 0;
            margin-left: 5px;
            @* background-color: #f1f1f1; *@
            @* border-bottom: 1px solid #ccc; *@
        }

        .logo-img {
            height: 40px;
            width: 110px;
            object-fit: cover;
            border-radius: 5%;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-0">
            <!-- Logo container -->
            <div class="logo-container">
                <img class="logo-img" src="~/Images/gcfx_logo.jpg" alt="CRM Logo" />
            </div>
            <!-- Spacer to push items to the right -->
            <div class="ms-auto d-flex align-items-center gap-3">
                <a href="#">
                    <i class="fa fa-search" aria-hidden="true"></i> Search
                </a>
                <a href="#">
                    <i class="fa fa-bell" aria-hidden="true"></i> Notification
                </a>
                <a href="#">
                    <i class="fa fa-user-circle" aria-hidden="true"></i> Profile
                </a>
            </div>
        </nav>

    </header>
    <div class="sidebar-container">
        <div class="sidebar">
            <a class="active" asp-area="" asp-controller="Home" asp-action="Index"> 
                <i class="fa fa-laptop" aria-hidden="true"></i> Dashboard
            </a>
            <a asp-area="" asp-controller="Clients" asp-action="Index">
                <i class="fa fa-users" aria-hidden="true"></i> Clients
            </a>
            <a asp-area="" asp-controller="Transaction" asp-action="Index">
                <i class="fa fa-exchange" aria-hidden="true"></i> Transaction
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fas fa-tools"></i> Tools
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fa fa-cogs" aria-hidden="true"></i> Settings
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fa fa-phone" aria-hidden="true"></i> Contact
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fa fa-copyright" aria-hidden="true"></i> Privacy
            </a>
            <!-- Toggle button at the bottom -->
            @* <button class="sidebar-toggle" onclick="toggleSidebar()">
                <i class="fa fa-angle-left" aria-hidden="true"></i>
            </button> *@
        </div>
    </div>
    <div class="content" style="margin-left:210px; padding:20px;">
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>


        <footer class="border-top footer text-muted">
            <div class="container-fluid">
                &copy; 2025 - CRM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        
    </script>
</body>

</html>
