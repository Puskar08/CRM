    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.querySelector(".toggle-btn");
            const sidebar = document.querySelector("aside");
            const overlay = document.querySelector(".overlay");
            const main = document.querySelector("main");
            const toggleIcon = toggleBtn.querySelector(".toggle-icon");
            const collapseBtn = document.querySelector(".collapse-btn");

            // Icon paths
            const hamburgerPath = "M120-680v-80h720v80H120Zm0 480v-80h720v80H120Zm0-240v-80h720v80H120Z";
            const crossPath = "m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z";
            let isSidebarOpen = false;

            function openSidebar() {
                sidebar.classList.add("sidebar-open");
                overlay.classList.add("active");
                main.classList.add("dimmed");
                document.body.style.overflow = "hidden"; // Prevent body scrolling

                // Change to cross icon
                toggleIcon.setAttribute("d", crossPath);
                isSidebarOpen = true;
            }

            function closeSidebar() {
                sidebar.classList.remove("sidebar-open");
                overlay.classList.remove("active");
                main.classList.remove("dimmed");
                document.body.style.overflow = ""; // Restore body scrolling

                // Change back to hamburger icon
                toggleIcon.setAttribute("d", hamburgerPath);
                isSidebarOpen = false;
            }
            function toggleSidebar() {
                if (isSidebarOpen) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            }

            function toggleCollapse() {
                sidebar.classList.toggle("collapsed");
            }
            // Expand sidebar on hover when collapsed
            sidebar.addEventListener("mouseenter", function () {
                if (sidebar.classList.contains("collapsed")) {
                    sidebar.classList.add("expanded-on-hover");
                }
            });

            // Collapse back when mouse leaves
            sidebar.addEventListener("mouseleave", function () {
                if (sidebar.classList.contains("expanded-on-hover")) {
                    sidebar.classList.remove("expanded-on-hover");
                }
            });

            toggleBtn.addEventListener("click", toggleSidebar);
            overlay.addEventListener("click", closeSidebar);
            collapseBtn.addEventListener("click", toggleCollapse);

            // Close sidebar when clicking on a link (optional)
            const sidebarLinks = document.querySelectorAll(".sidebar a");
            sidebarLinks.forEach((link) => {
                link.addEventListener("click", function (e) {
                    sidebarLinks.forEach((l) => l.classList.remove("active"));
                    this.classList.add("active");

                    // Close sidebar on mobile after clicking a link
                    if (window.innerWidth <= 768) {
                        closeSidebar();
                    }
                });
            });

            // Close sidebar on window resize if it's open and we're no longer in mobile view
            window.addEventListener("resize", function () {
                if (
                    window.innerWidth > 768 &&
                    sidebar.classList.contains("sidebar-open")
                ) {
                    closeSidebar();
                }
                // Ensure sidebar is not collapsed on mobile
                if (window.innerWidth <= 768) {
                    sidebar.classList.remove("collapsed");
                }
            });



            // Profile Dropdown Functionality
            // Profile Dropdown Functionality
            const profileButton = document.getElementById('profileButton');
            const profileDropdown = document.getElementById('profileDropdown');
            @* const dropdownOverlay = document.createElement('div');

            dropdownOverlay.className = 'dropdown-overlay';
            document.body.appendChild(dropdownOverlay); *@

                let isProfileOpen = false;

            function toggleProfileDropdown() {
                isProfileOpen = !isProfileOpen;
                profileDropdown.classList.toggle('active', isProfileOpen);
                @* dropdownOverlay.classList.toggle('active', isProfileOpen); *@

                // Close sidebar if open
                if (isSidebarOpen) {
                    closeSidebar();
                }
            }

            function closeProfileDropdown() {
                isProfileOpen = false;
                profileDropdown.classList.remove('active');
                @* dropdownOverlay.classList.remove('active'); *@
            }

            profileButton.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                toggleProfileDropdown();
            });

            @* dropdownOverlay.addEventListener('click', closeProfileDropdown); *@

                // Close dropdown when clicking outside
                document.addEventListener('click', function (e) {
                    if (isProfileOpen && !profileButton.contains(e.target) && !profileDropdown.contains(e.target)) {
                        closeProfileDropdown();
                    }
                });

            // Close dropdown when pressing Escape key
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && isProfileOpen) {
                    closeProfileDropdown();
                }
            });

            // Close dropdown when clicking on menu items (except sign out which might have confirmation)
            const dropdownItems = profileDropdown.querySelectorAll('.dropdown-item:not(.sign-out)');
            dropdownItems.forEach(item => {
                item.addEventListener('click', closeProfileDropdown);
            });


            const userInfoToggle = document.getElementById('userInfoToggle');
            const dropdownToggle = document.getElementById('dropdownToggle');
            const dropdownsection = document.getElementById('dropdownsection');

            // Toggle dropdown when clicking on user info section or dropdown icon
            userInfoToggle.addEventListener('click', function () {
                dropdownsection.classList.toggle('show');
                dropdownToggle.classList.toggle('rotated');
            });

            // Prevent event bubbling when clicking directly on the toggle button
            dropdownToggle.addEventListener('click', function (e) {
                e.stopPropagation();
                dropdownsection.classList.toggle('show');
                dropdownToggle.classList.toggle('rotated');
            });
        });
    </script>
