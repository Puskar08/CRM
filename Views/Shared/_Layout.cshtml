        .dropdowntoggle {
            background: none;
            border: none;
            cursor: pointer;
            color: #6c757d;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 24px;
            padding: 8px;
            transition: transform 0.3s ease;
        }

        .dropdowntoggle.rotated {
            transform: rotate(180deg);
        }

        .dropdownsection {
            max-height: 0;
            width: 100%;
            overflow: hidden;
            transition: max-height 0.4s ease;
        }

        .dropdownsection.show {
            max-height: 200px;
        }

        .user-icon {
