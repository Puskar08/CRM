    <!-- Markets Section -->
    <script>
        // Mobile sidebar functionality
        const openSidebar = document.getElementById('open-sidebar');
        const closeSidebar = document.getElementById('close-sidebar');
        const mobileSidebar = document.querySelector('.mobile-sidebar');
        const loginBtn = document.getElementById('loginbtn');

        function toggleSidebar() {
            const isOpen = mobileSidebar.classList.contains('active');

            if (!isOpen) {
                // Open sidebar
                mobileSidebar.classList.add('active');
                openSidebar.style.display = 'none';
                loginBtn.style.display = 'none';
                closeSidebar.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            } else {
                // Close sidebar
                mobileSidebar.classList.remove('active');
                openSidebar.style.display = 'flex';
                loginBtn.style.display = 'flex';
                closeSidebar.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        openSidebar.addEventListener('click', toggleSidebar);
        closeSidebar.addEventListener('click', toggleSidebar);

        // Close sidebar when clicking on a link
        const mobileLinks = document.querySelectorAll('.mobile-nav a, .mobile-auth a');
        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileSidebar.classList.remove('active');
                openSidebar.style.display = 'flex';
                closeSidebar.style.display = 'none';
                document.body.style.overflow = 'auto';
            });
        });

        // Close sidebar on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                mobileSidebar.classList.remove('active');
                openSidebar.style.display = 'flex';
                closeSidebar.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Close sidebar when window is resized to desktop size
        window.addEventListener('resize', () => {
            if (window.innerWidth > 915) {
                mobileSidebar.classList.remove('active');
                openSidebar.style.display = 'none';
                closeSidebar.style.display = 'none';
                document.body.style.overflow = 'auto';
                loginBtn.style.display = 'flex';
            } else {
                // On mobile, show hamburger icon if sidebar is closed
                if (!mobileSidebar.classList.contains('active')) {
                    openSidebar.style.display = 'flex';
                    closeSidebar.style.display = 'none';
                }
            }
        });
    </script>
