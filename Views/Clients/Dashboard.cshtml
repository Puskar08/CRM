<style>
    .dashboard-title {
        font-size: 1.2rem;
        color: #2c3e50;
        font-weight: 700;
        margin: 0 !important;
    }

    .btn-add-account {
        transition: background 0.3s ease, border-color 0.3s ease;
        background: rgba(52, 73, 94, 0.1);
        color: #2c3e50;
        border: 1px solid #e0e0e0;
    }

    .btn-add-account:hover {
        background: rgba(52, 73, 94, 0.15);
    }

    .accounts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .account-name {
        border: 1px solid;
        border-radius: 38px;
        font-size: 14px;
        width: 15%;
        display: flex;
        justify-content: center;
    }

    .account-card {
        background: #ededee;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
    }

    .account-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .account-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .account-number {
        color: #7f8c8d;
        font-size: 0.9rem;
    }

    .account-details {
        margin-bottom: 20px;
    }

    .balance-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        margin: 20px 0;
        text-align: center;
    }

    .balance-label {
        color: #7f8c8d;
        font-size: 0.95rem;
        margin-bottom: 5px;
    }

    .balance-amount {
        font-size: 1.8rem;
        font-weight: 700;
        color: #27ae60;
    }

    .account-actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-deposit {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        width: 100%;
        padding: 12px 15px;
    }

    .btn-deposit:hover {
        background: linear-gradient(135deg, #2980b9 0%, #2471a3 100%);
    }

    .btn-withdraw {
        background: rgba(52, 73, 94, 0.1);
        color: #2c3e50;
        border: 1px solid #e0e0e0;
        width: 100%;
        padding: 12px 15px;

    }

    .btn-withdraw:hover {
        background: rgba(52, 73, 94, 0.15);
    }

    .accounts-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
</style>
<link rel="stylesheet" href="~/css/clientsDashboar.css">
