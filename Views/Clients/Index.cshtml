@{
    ViewData["Title"] = "Clients";
}
<style>

</style>
<div class="page">
    <div class="page-header">
        <div class="page-title">
            <h2>Clients</h2>
            <p>Manage and review all clients</p>
        </div>
        <div class="page-actions d-flex gap-2">
            <button type="button" class="add-button" data-bs-toggle="modal" data-bs-target="#TransactionModal">
                <i class="fas fa-plus"></i> Add Client
            </button>
            <a asp-controller="Clients" asp-action="Register" class="add-button" style="text-decoration: none; color: white;">
                <i class="fas fa-plus"></i> Add Client
            </a>
            <a asp-controller="Clients" asp-action="RegisterClient" class="add-button" style="text-decoration: none; color: white;">
                <i class="fas fa-plus"></i> Register Client
            </a>
        </div>
    </div>
    <div class="page-body">
        <div class="body-content">
            <div class="content-header">
                <h3>Client List</h3>
                <div class="global-search">
                    <input type="text" id="globalSearch" placeholder="Global search..." />
                    <button class="add-btn search-btn"><i class="fas fa-search"></i> Search</button>
                </div>
            </div>
            <table class="data-table">
                <thead>
                    <tr>
                        <th data-sort="LoginID">
                            LoginID
                            <div class="table-filter">
                                <input type="text" id="filterLoginId" placeholder="Filter ID" />
                            </div>
                            </th>
                        <th data-sort="AccountID">
                            AccountID
                            <div class="table-filter">
                                <input type="text" id="filterAccountId" placeholder="Filter Account ID" />
                            </div>
                        </th>
                        <th data-sort="Name">
                            Name
                            <div class="table-filter">
                                <input type="text" id="filterName" placeholder="Filter Name" />
                            </div>
                        </th>
                        <th data-sort="Email">
                            Email
                            <div class="table-filter">
                                <input type="text" id="filterEmail" placeholder="Filter Email" />
                            </div>
                        </th>
                        <th data-sort="Phone">
                            Phone
                            <div class="table-filter">
                                <input type="text" id="filterPhone" placeholder="Filter Phone" />
                            </div>
                        </th>
                        <th data-sort="Group">
                            Group
                            <div class="table-filter">
                                <input type="text" id="filterGroup" placeholder="Filter Group" />
                            </div>
                        </th>
                        <th data-sort="Status">
                            Status
                            <div class="table-filter">
                                <select id="filterStatus">
                                    <option value="All">All Statuses</option>
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>
                        </th>
                    </tr>
                </thead>
