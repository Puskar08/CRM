                    // ... other form values
                };
                
                fetch('/Client/Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => response.json())
                .then(data => {
                    console.log('Success:', data);
                    // Redirect or show success message
                })
                .catch(error => {
                    console.error('Error:', error);
                });
                */
            });
        });
    </script>
