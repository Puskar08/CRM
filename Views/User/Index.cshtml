@model IEnumerable<CRM.Models.UserViewModel>

<h2>User List</h2>

<p>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Add New User</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>
<script>
    document.addEventListener('DOMContentLoaded',function(){
        @{
            var showSuccessToaster = TempData["ShowSuccessToaster"] as bool?;
        }
        @if (showSuccessToaster.HasValue && showSuccessToaster.Value)
        {
            <text>
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: 'User created successfully.',
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true
                });
                </text>
        }
    });
</script>