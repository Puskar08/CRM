@model IEnumerable<CRM.Models.UserViewModel>
<div class="page">
    <div class="page-header d-flex justify-content-between align-items-center mb-3 p-3 border-bottom bg-white shadow-sm rounded">
        <h5 class="mb-0">Users</h5>
        <div class="page-actions d-flex gap-2">
            <a asp-controller="Account" asp-action="Register" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add User
            </a>
            <!-- Example of future buttons -->
            <button class="btn btn-outline-primary">
                <i class="bi bi-download"></i> Export
            </button>
            <button class="btn btn-outline-secondary">
                <i class="bi bi-filter"></i> Filter
            </button>
        </div>
    </div>
    <div class="page-body">
        <table>
            <thead>
                <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Name</td>
                    <td>@user.PhoneNumber</td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        @{
                var showSuccessToaster = TempData["ShowSuccessToaster"] as bool?;
            }
            @if (showSuccessToaster.HasValue && showSuccessToaster.Value)
            {
                <text>
                    Swal.fire({
                        toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: 'User created successfully.',
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true
                        });
                </text>
        }
    });
</script>